#!/usr/bin/expect -f

set retval 0
set timeout -1
set loginUser "test"
set loginPassword "pass"

spawn qemu-system-aarch64 -machine "raspi3b" -cpu arm1176 -m 1G -drive "format=raw,file=raspios.img" -dtb "./tests/dtb/bcm2710-rpi-3-b.dtb" -kernel "./tests/kernel/kernel8.img" -append "loglevel=0 quiet console=ttyAMA0,115200 root=/dev/mmcblk0p2 rootfstype=ext4 fsck.repair=yes rootwait" -nographic -serial mon:stdio

# Login process
expect {
  "raspberrypi login: " {
    send "$loginUser\r"
    exp_continue
  }
  "Password: " {
    send "$loginPassword\r"
    exp_continue
  }
  "test@raspberrypi:~$ " {
    send "sudo /opt/zram/install.bash\r"
  }
  "Login incorrect" {
    exit 1
  }
}

# Run tests
expect "test@raspberrypi:~$ "
send "/opt/zram/tests/test-zram-devices.bash\r"
expect {
  -re "Test failed:.*$" {
    set retval 1
    exp_continue
  }
  "test@raspberrypi:~$ " {
    send "sudo /opt/zram/uninstall.bash\r"
  }
}
expect "test@raspberrypi:~$ "
send "/opt/zram/tests/test-zram-devices.bash removal\r"
expect {
  -re "Test failed:.*$" {
    set retval 1
    exp_continue
  }
  "test@raspberrypi:~$ " {
    send "sudo shutdown -h now\r"
  }
}

exit $retval
